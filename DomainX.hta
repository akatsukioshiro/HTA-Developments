<!DOCTYPE html>
<html>

<HTA:APPLICATION
	APPLICATIONNAME = "VANISH"
	ID="Vanish"
	ICON = "icon.ico"
	BORDER="none"
	SHOWINTASKBAR="yes"
	SINGLEINSTANCE="yes"
	SYSMENU="no"
	WINDOWSTATE="maximize"
	SCROLL="no"
	VERSION="1.0"
	CONTEXTMENU="no"
	INNERBORDER="no"
	SELECTION="no"
/>

<head>
<meta http-equiv="x-ua-compatible" content="ie=9">
<style type="text/css">

	html, body 
	{
  	height: 100%;
  	margin: 0;
  	background-color:#FFFFFF;
	}

	.full-height 
	{
  	height: 100%;
  	background: black;
  	cursor: url('cursor.cur'),none;
	}

	.rp
	{
	width:100%;
	height:10%;
	background:rgba(255,0,0,0.2);
	
	}
	.rp1
	{
	width:100%;
	height:5%;
	background: rgba(255,0,0,0.4);
	
	}

</style>
<script language="javascript">
function omi()
{
	document.getElementById('lop').setAttribute("class", "rp");
}
function om()
{
	document.getElementById('lop').setAttribute("class", "rp1");
}
</script>
</head>

<body onload="javascript:omi()">
<div id="d" class="full-height">
<div id="lop" onmouseover="javascript:om()" onmouseout="javascript:omi()"></div>
</div>
</body>

</html>